<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyInfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_myInfo">

        <include layout="@layout/layout_top_bar_my_info"></include>
    </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rel_myInfo">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="11"
        android:background="@mipmap/ic_splash"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="الاسم"
            android:textColorHint="@color/gray"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/input_name"
            android:background="@drawable/edit_style"
            android:layout_margin="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="البريد الالكتروني"
            android:textColorHint="@color/gray"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/input_mail"
            android:background="@drawable/edit_style"
            android:layout_margin="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="تاريخ الميلاد"
            android:textColorHint="@color/gray"
            android:id="@+id/input_birthday"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/edit_style"
            android:layout_margin="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/input_blood"
            android:hint="فصيله الدم"
            android:textColorHint="@color/gray"
            android:background="@drawable/edit_style"
            android:layout_margin="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="رقم الهاتف"
            android:textColorHint="@color/gray"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/input_phoneNum"
            android:background="@drawable/edit_style"
            android:layout_margin="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="كلمه المرور"
            android:textColorHint="@color/gray"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/input_password_regis"
            android:background="@drawable/edit_style"
            android:layout_margin="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="تاكيد كلمه المرور"
            android:textColorHint="@color/gray"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/input_confirm_password"
            android:background="@drawable/edit_style"
            android:layout_margin="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="اخر تارخ للتبرع"
            android:textColorHint="@color/gray"
            android:id="@+id/input_lastDate"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/edit_style"
            android:layout_margin="5dp"/>

        <Spinner
            android:id="@+id/custom_spinner"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/edit_style"
            android:entries="@array/governorate"
            />

        <Spinner
            android:id="@+id/custom_spinner_2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/edit_style"
            android:layout_margin="5dp"
            android:entries="@array/governorate"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/confirm_register"
            android:background="@color/blue_dark"
            android:text="تعديل"
            android:textSize="22dp"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </LinearLayout>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</FrameLayout>