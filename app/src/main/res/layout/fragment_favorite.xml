            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rv_favorite"></android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>